{
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "workspaces": [
    "ember-user-activity",
    "test-app"
  ],
  "scripts": {
    "build": "yarn workspace ember-user-activity run build",
    "lint": "yarn workspaces foreach --all run lint",
    "lint:fix": "yarn workspaces foreach --all run lint:fix",
    "prepare": "yarn build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "yarn workspace ember-user-activity run start",
    "start:test-app": "yarn workspace test-app run start",
    "test": "yarn workspaces foreach --all run test",
    "test:ember": "yarn workspaces foreach --all run test:ember",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^1.1.0",
    "release-it": "^15.5.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "packageManager": "yarn@4.0.2"
}
